@page "/"
@inject NavigationManager navigateManager
@using Microsoft.AspNetCore.Http.Extensions

<PageTitle>Index</PageTitle>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CodePen - A Pen by Mohithpoojary</title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/all.css'>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.2.0/css/fontawesome.css'>
    <link rel="stylesheet" href="./style.css">
</head>
<body>
    <!-- partial:index.partial.html -->
    <div class="container">
        <div class="screen">
            <div class="screen__content">
                <form class="login">
                    <div class="login__field">
                        <i class="login__icon fas fa-user"></i>
                        <input type="text" @bind="@LoginUser" @oninput="OnLoginEvent" class="login__input" placeholder="User name / Email">
                    </div>
                    <div class="login__field">
                        <i class="login__icon fas fa-lock"></i>
                        <input type="password" @bind="@LoginPassword" @oninput="OnPasswordEvent" class="login__input" placeholder="Password">
                    </div>
                    <button class="button login__submit" @onclick="TryLogin">
                        <span class="button__text">Log In Now</span>
                        <i class="button__icon fas fa-chevron-right"></i>
                    </button>
                </form>
                <div class="social-login">
                    <button class="button SignUp__submit" @onclick="Signup">
                        <span class="button__text">Sign Up</span>
                        <i class="button__icon fas fa-chevron-right"></i>
                    </button>
                </div>
            </div>
            <div class="screen__background">
                <span class="screen__background__shape screen__background__shape4"></span>
                <span class="screen__background__shape screen__background__shape3"></span>
                <span class="screen__background__shape screen__background__shape2"></span>
                <span class="screen__background__shape screen__background__shape1"></span>
            </div>
        </div>
    </div>
    <!-- partial -->

</body>
</html>


@code {
    private string LoginUser = "";
    private void OnLoginEvent(ChangeEventArgs changeEvent)
    {
        LoginUser = (string)changeEvent.Value;
    }

    private string LoginPassword = "";
    private void OnPasswordEvent(ChangeEventArgs changeEvent)
    {
        LoginPassword = (string)changeEvent.Value;
    }

    private void TryLogin()
    {
        new Data.LoginClass(LoginUser, LoginPassword).SQL();
    }

    private void Signup()
    {
        navigateManager.NavigateTo("SignUp");
    }

}
